!!!
html
	head
		title #{title}
		link(rel='stylesheet', href='/style.css')

		block scripts
			script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
			script(src='/main.js')

	body
		marquee#marquee: ul
		header
			h1: a(href='/') TweetStreet
			nav: ul
				li: a(href='/instructions') Instructions

				li: a(href='/top-traders') Top Traders

				li: a(href='/earn-money') Earn Money!

				li: a(href='/contact') Contact

			#user
				if logged
					span On the floor, 
						a(href='/my-portfolio') #{user.user}

				else
					a(href='/login') Login
					a(href='/register') Register
				
			#search
				input(type='text')
				button search

		#message
		#main
			block content