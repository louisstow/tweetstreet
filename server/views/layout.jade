!!!
html
	head
		title #{title}
		link(rel='stylesheet', href='/style.css')

		block scripts
			script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
			script(src='/main.js')

	body
		#marquee: ul
		header
			#user
				if logged
					span On the floor, 
						a(href='/my-portfolio') #{user.user}
					div Available Cash 
						span.money $#{user.money}
					a(href='/logout') Logout

				else
					a(href='/login') Login
					a(href='/register') Register

			h1
				a(href='/')
					span Tweet Street
			nav: ul
				li: a(href='/instructions') Instructions

				if logged
					li: a(href='/my-portfolio') Portfolio

				li: a(href='/top-traders') Top Traders

				li: a(href='/earn-money') Earn Money!

				li: a(href='http://twitter.com/louisstow') Follow Me
				
			#search
				input(type='text',placeholder='@')
				button search

		#message
		#main
			block content